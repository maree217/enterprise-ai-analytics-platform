# Enterprise AI Analytics Platform - Environment Configuration

# Application Settings
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/eaap_db
REDIS_URL=redis://localhost:6379/0
NEO4J_URL=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Azure Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=eaap-rg

# Azure AI Services
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Azure Machine Learning
AZURE_ML_WORKSPACE_NAME=eaap-ml-workspace
AZURE_ML_RESOURCE_GROUP=eaap-rg
AZURE_ML_SUBSCRIPTION_ID=your-subscription-id

# Message Queues & Streaming
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
AZURE_EVENT_HUB_CONNECTION_STRING=your-event-hub-connection-string
AZURE_SERVICE_BUS_CONNECTION_STRING=your-service-bus-connection-string

# Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=eaap-data

# Security & Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_AUTOML=true
ENABLE_REAL_TIME_PROCESSING=true
ENABLE_KNOWLEDGE_GRAPHS=true
ENABLE_NATURAL_LANGUAGE_QUERY=true

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=1000
CACHE_TTL=3600
MAX_QUERY_TIME=30

# Development Settings (only for development environment)
RELOAD=true
ACCESS_LOG=true
DOCS_URL=/docs
REDOC_URL=/redoc